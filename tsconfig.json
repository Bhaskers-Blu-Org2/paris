{
	"compilerOptions": {
		"lib": ["es2016", "dom"],
		"target": "es5",
		"module": "commonjs",
		"moduleResolution": "node",
		"declaration": true,
		"rootDir": ".",
		"outDir": "./bundle",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noImplicitUseStrict": false,
		"noFallthroughCasesInSwitch": true,
		"typeRoots": [
			"node_modules/@types",
			"node_modules"
		],
		"types" : ["node", "lodash-es"],
		"baseUrl": "/",
		"paths": {
			"@angular/*": [
				"../node_modules/@angular/*"
			],
			"rxjs/*": [
				"../node_modules/rxjs/*"
			]
		}
	}
}
